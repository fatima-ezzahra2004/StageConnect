<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.projet.controllers.OffresController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f3f6f8;">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Offres de Stage" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Rechercher..."/>
    </HBox>

    <HBox spacing="10">
        <ComboBox fx:id="filterDomaine" promptText="Domaine" prefWidth="200"/>
        <ComboBox fx:id="filterType" promptText="Type" prefWidth="150"/>
        <Button text="Filtrer" onAction="#handleFilter"
                style="-fx-background-color: #0a66c2; -fx-text-fill: white;"/>
    </HBox>

    <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vvalue="1.0">
        <VBox fx:id="offresContainer" spacing="15"/>
    </ScrollPane>
</VBox>